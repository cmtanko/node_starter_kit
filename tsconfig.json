{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": false,
    "lib": ["es2015", "es2016", "es2017"],
    "types": ["node"],
    "watch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
